<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @schedule, (:session, url: login_path) do |f| %>

    <%= f.label "Select a Habit" %>
    <%= f.collection_select :habit_id, @habits, :id, :name  %>
    <br>
    <%= f.label "Select a User" %>
    <%= f.collection_select :user_id, @users, :id, :name  %>
    <br>
    <%= f.label :time %>
    <%= f.number_field :time, class: 'form-control' %>
    <br>
    <%= f.label :frequency %>
    <%= f.text_field :frequency, class: 'form-control' %>
    <br>
    <%= f.label :start_date %>
    <%= date_field :schedule, :start_date, class: 'form-control' %>
    <br>
    <%= f.label :end_date %>
    <%= date_field :schedule, :end_date, class: 'form-control' %>
    <br>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
